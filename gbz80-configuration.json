{
  "comments" : {
    "lineComment" : ";",
    "blockComment" : ["/*", "*/"]
  },
  "autoClosingPairs" : [
    { "open": "(", "close" : ")" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close" : "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "/**", "close" : "*/", "notIn": ["string"] }
  ],
  "brackets" : [
    [ "(", ")" ],
    [ "[", "]" ]
  ],
  "surroundingPairs" : [
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*;+\\s*#?region\\b",
      "end": "^\\s*;+\\s*#?endregion\\b"
    }
  },
  "indentationRules" : {
    "increaseIndentPattern" : "^(((([a-zA-Z_][a-zA-Z_0-9]*)?\\.)?[a-zA-Z_][a-zA-Z_0-9]*[:]{1,2})|(\\.[a-zA-Z_][a-zA-Z_0-9]*)).*$",
    "decreaseIndentPattern" : "^\\s+(((([a-zA-Z_][a-zA-Z_0-9]*)?\\.)?[a-zA-Z_][a-zA-Z_0-9]*[:]{1,2})|(\\.[a-zA-Z_][a-zA-Z_0-9]*)).*$"
  }
}
